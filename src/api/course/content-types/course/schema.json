{
  "kind": "collectionType",
  "collectionName": "courses",
  "info": {
    "singularName": "course",
    "pluralName": "courses",
    "displayName": "Course",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "pluginOptions": {},
      "type": "string",
      "required": true,
      "minLength": 3,
      "maxLength": 100
    },
    "description": {
      "pluginOptions": {},
      "type": "text",
      "required": true,
      "minLength": 10,
      "maxLength": 1000
    },
    "thumbnail": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ],
      "pluginOptions": {}
    },
    "categories": {
      "pluginOptions": {},
      "type": "customField",
      "required": true,
      "options": [
        "Desarrollo Web",
        "Frontend",
        "Backend"
      ],
      "customField": "plugin::multi-select.multi-select"
    },
    "technologies": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::technology.technology"
    },
    "identifier": {
      "pluginOptions": {},
      "type": "string",
      "minLength": 3,
      "maxLength": 200,
      "required": true,
      "unique": true
    },
    "lessons": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::lesson.lesson"
    }
  }
}
